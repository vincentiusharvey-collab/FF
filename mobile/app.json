{
  "expo": {
    "name": "Fetch Files",
    "slug": "fetch-files",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fetchfiles.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.fetchfiles.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Fetch Files to access your camera for pet photos and document scanning."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Fetch Files to access your photos to upload pet images and medical records."
        }
      ]
    ]
  }
}
